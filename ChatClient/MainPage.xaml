<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatClient.MainPage"
             WidthRequest="750">

    
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <HorizontalStackLayout>
                <VerticalStackLayout
                    Spacing = "50"
                    Padding = "30,0">
                    <HorizontalStackLayout>
                        <Label
                        VerticalTextAlignment="Center"
                        Text="ServerName/Address:  "
                        FontSize="18" />

                        <Entry
                        x:Name="ServerName"
                        WidthRequest="100"
                        VerticalTextAlignment="Center"
                        FontSize="18"
                        Text="localhost"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <Label
                        VerticalTextAlignment="Center"
                        Text="Your Name:       "
                        FontSize="18" />

                        <Entry
                        x:Name="UserName"
                        WidthRequest="100"
                        VerticalTextAlignment="Center"
                        FontSize="18"
                        />
                    </HorizontalStackLayout>
                    <Label
                        x:Name="ConnectionStatus"
                        FontSize="32"
                        Text="Connected to Server!"
                        IsVisible="false"/>
                <Button
                        x:Name="ConnectToServer"
                        Text="Connect to server!"
                        IsVisible="true"
                        Clicked="ClientConnectToServer"
                    />
                <HorizontalStackLayout>
                        <Label
                        VerticalTextAlignment="Center"
                        Text="Say something!  "
                        FontSize="18" />

                        <Entry
                        x:Name="UserMessage"
                        WidthRequest="100"
                        VerticalTextAlignment="Center"
                        FontSize="18"
                        Completed="SendUserMessage"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
                <VerticalStackLayout
                    Spacing = "30"
                    Padding = "30,0">
                    <Border
                    Stroke="Red"
                    StrokeThickness="4"
                    Background ="white">
                        <Editor
                            x:Name="ParticipantList"
                            IsReadOnly="True"
                            FontSize="10"
                            WidthRequest="300"
                            HeightRequest="240"/>
                    </Border>
                    <Button
                    x:Name="GetParticipants"
                    Text="Get Participants"
                    HorizontalOptions="Center"
                    Pressed="GetAllParticipants"
                    />
                </VerticalStackLayout>
            </HorizontalStackLayout>
        <ScrollView>
            <VerticalStackLayout>
                <Border Stroke="Black"
                    StrokeThickness="2"
                    Background="White"
                    WidthRequest="400">
                    <Editor
                    x:Name="ChatHistory"
                    IsReadOnly="True"
                    Text="Chat History will appear below"
                    HorizontalTextAlignment="Start"
                    FontSize="10"
                    HeightRequest="300"/>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
    

</ContentPage>
